{
    "editor.formatOnSave": false,
    "workbench.colorTheme": "Spacegray Ocean Dark",
    "explorer.confirmDragAndDrop": false,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/*.pyc": true
    },
    "gitlens.advanced.messages": {
        "suppressShowKeyBindingsNotice": false
    },
    "gitlens.codeLens.enabled": false,
    "window.zoomLevel": 0,
    "editor.fontFamily": "Menlo",
    "files.trimTrailingWhitespace": true,
    "workbench.editor.enablePreview": true,
    "breadcrumbs.enabled": true,
    "explorer.autoReveal": false,
    "python.jediEnabled": false,
    // "python.envFile": "${workspaceFolder}/.env",
    "python.envFile": "${workspaceFolder}../../.virtualenvs",
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "none",
    "explorer.confirmDelete": false,
    "python.linting.pylintUseMinimalCheckers": false,
    "python.linting.pylintPath": "/Users/leonardo.vanzella/.virtualenvs/iclinic-env/bin/python",
    "editor.accessibilitySupport": "off",
    "kite.editorMetricsEnabled": "yes",
    "editor.showUnused": true,
    "python.linting.pylintArgs": [
        "--disable=all", "--enable=<stuff>,unused-import"
    ],
    "files.insertFinalNewline": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--enable=all",
    ],
    "editor.lineHeight": 15,
    "workbench.iconTheme": "vscode-icons",
    // "python.linting.pylintArgs": ["--load-plugins", "pylint_django"],
    // "python.linting.pep8Args": ["--ignore=E303", "--ignore=E501"]
    "workbench.colorCustomizations": {
        // "list.inactiveSelectionBackground": "#C5DEF0",
